# Database
DATABASE_URL="file:./dev.db"

# Server
PORT=3000
NODE_ENV=development

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# AWS Configuration
AWS_TELEMETRY_URL=https://mbgaykif87.execute-api.eu-north-1.amazonaws.com/

# Telemetry Security
# Modes: off | monitor | enforce
TELEMETRY_SECURITY_MODE=off
# Max accepted clock skew for signed payload timestamp (seconds)
TELEMETRY_MAX_SKEW_SECONDS=900
# If false, unknown devices are rejected instead of auto-registering
TELEMETRY_ALLOW_UNKNOWN_AUTOREGISTER=true
# Default auth profile when unknown device auto-register is enabled
TELEMETRY_DEFAULT_AUTH_MODE=signed

# Anti-Captcha (for EPDK sync)
ANTI_CAPTCHA_KEY=your-anti-captcha-api-key

# Admin (initial setup only - will be moved to DB)
ADMIN_EMAIL=admin@margaz.com
ADMIN_PASSWORD=change-this-password
